<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quarta_tela">


    <Button
        android:id="@+id/buttonFourthToFirst"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        style="@style/botao_verde"
        android:text="IR PARA PRIMEIRA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonFourthToSecond"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        style="@style/botao_verde"
        android:text="IR PARA SEGUNDA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFourthToFirst" />

    <Button
        android:id="@+id/buttonFourthToThird"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        style="@style/botao_verde"
        android:text="IR PARA TERCEIRA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFourthToSecond" />

    <Button
        android:id="@+id/buttonFourthToFifth"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        style="@style/botao_verde"
        android:text="IR PARA QUINTA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFourthToThird" />

    <TextView
        android:id="@+id/textMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFourthToFifth" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="QUARTA TELA"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>