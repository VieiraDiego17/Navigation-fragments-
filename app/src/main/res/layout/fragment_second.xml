<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/botao">


    <Button
        android:id="@+id/buttonSecondToFirst"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        android:text="IR PARA PRIMEIRA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonSecondToThird"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        android:text="IR PARA TERCEIRA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSecondToFirst" />

    <Button
        android:id="@+id/buttonSecondToFourth"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        android:text="IR PARA QUARTA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSecondToThird" />

    <Button
        android:id="@+id/buttonSecondToFifth"
        android:layout_width="287dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botao"
        android:text="IR PARA QUINTA TELA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSecondToFourth" />

    <TextView
        android:id="@+id/textMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSecondToFifth" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SEGUNDA TELA"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Digite um número de 0 até 100 \n Será enviado para as próximas telas."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMensagem" />

    <EditText
        android:id="@+id/numeroDigitado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/cantos"
        android:ems="10"
        android:hint="Digite aqui"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAviso" />

</androidx.constraintlayout.widget.ConstraintLayout>